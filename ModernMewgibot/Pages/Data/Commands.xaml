<UserControl x:Class="ModernMewgibot.Pages.Data.Commands"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel>
                <TextBlock Text="Note: %u% represents the person running the command in chat, %t% represents whatever they type after the command." Margin="0,0,0,10" TextWrapping="Wrap" />
                <DataGrid ItemsSource="{Binding Commands}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
